      <param-name>targetFilterLifecycle</param-name>
      <param-value>true</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>adminLoginCaptchaFilter</filter-name>
    <url-pattern>/admin/login/check</url-pattern>
  </filter-mapping>
